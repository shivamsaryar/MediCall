<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shivamsaryar.medicalltest1.FirstWelcomeScreenFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome!"
            android:textSize="40sp"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginLeft="10dp"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="345dp"
            android:layout_height="200dp"
            android:id="@+id/imageView"
            android:layout_margin="15dp"
            android:src="@drawable/ambulance2"
            android:layout_marginBottom="30dp"
            android:contentDescription="ambulancePic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Swipe right"
            android:id="@+id/textView19"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/swipe_right"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="24X7 Medical Supervision At Your Service"
            android:textSize="25sp"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

</FrameLayout>
